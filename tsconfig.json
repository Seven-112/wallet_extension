{
    "compilerOptions": {
       "jsx": "react",
       "strict": true,
       "module": "commonjs",
       "target": "es5",
       "esModuleInterop": true,
       "sourceMap": true,
       "rootDir": "./",
       "outDir": "dist/js",
       "noEmitOnError": true,
       "lib": ["es2015", "dom"],
       "experimentalDecorators": true,
       "resolveJsonModule": true,
       "allowSyntheticDefaultImports": true,
       "allowJs": true,
       "typeRoots": [ 
         "./node_modules/@types", 
       "./src/@types"],
       "baseUrl": "./",
      "paths": {
         "crypto": [
            "./node_modules/crypto-browserify"
         ]
      }
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
 }